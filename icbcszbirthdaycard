                transition: opacity var(--fade-out-duration, 2s) ease; /* 已更新为2秒 */
            }
            /* 隐藏滚动条 */
            .no-scrollbar::-webkit-scrollbar {
                display: none;
            }
            .no-scrollbar {
                -ms-overflow-style: none;
                scrollbar-width: none;
            }
            /* 移动端图片适配 */
            .card-image-mobile {
                object-fit: contain;
            }
            @screen sm {
                .card-image-mobile {
                    object-fit: cover;
                }
            }
            /* 移动端卡片尺寸优化 */
            .card-container-mobile {
                max-width: 95vw !important;
                max-height: 95vh !important;
