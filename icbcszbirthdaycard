                }
            }
            /* 爱心动画 */
            .heart {
                position: absolute;
                opacity: 0;
                pointer-events: none;
                color: var(--heart-color, #FF4B91);
                font-size: 20px;
                bottom: 0;
            }
            @keyframes floatUp {
                0% {
                    transform: translateY(0) rotate(0deg);
                    opacity: 0;
                }
                10% {
                    opacity: 1;
                }
                90% {
                    opacity: 1;
                }
                100% {
                    transform: translateY(-100vh) rotate(720deg);
                    opacity: 0;
                }
            }
        }
