    <!-- 爱心容器 -->
    <div id="hearts-container" class="fixed inset-0 pointer-events-none z-30"></div>

    <script>
        // 获取DOM元素
        const cardContainer = document.getElementById('card-container');
        const cardFront = document.getElementById('card-front');
        const cardBack = document.getElementById('card-back');
        const heartsContainer = document.getElementById('hearts-container');
        let cardOpened = false;
        
        // 设置CSS变量
        document.documentElement.style.setProperty('--heart-color', CONFIG.colors.heart);
        document.documentElement.style.setProperty('--heart-animation-duration', CONFIG.animation.heartAnimationDuration);
        document.documentElement.style.setProperty('--fade-out-duration', CONFIG.animation.fadeOutDuration);
        
        // 点击卡片切换显示状态
        cardContainer.addEventListener('click', (e) => {
            // 防止事件冒泡
            e.stopPropagation();
            
            // 如果卡片还没打开，执行打开动画
            if (!cardOpened) {
                // 触发爱心动画
                createHearts();
                
                // 封面淡出（延迟时间与动画时长保持一致）
                setTimeout(() => {
                    cardFront.classList.add('fade-out');
                    cardBack.classList.add('active');
                    cardOpened = true;
                }, 500); // 延迟时间调整为0.5秒，让过渡更自然
            }
        });
        
        // 创建爱心动画
        function createHearts() {
            // 清除现有爱心
            heartsContainer.innerHTML = '';
            
            // 创建30个爱心
            const totalHearts = 30;
            for (let i = 0; i < totalHearts; i++) {
                setTimeout(() => {
                    createHeart();
                }, i * 50); // 每个爱心间隔50ms出现
            }
        }
        
        // 创建单个爱心
        function createHeart() {
            const heart = document.createElement('div');
            heart.className = 'heart';
            heart.innerHTML = '❤️';
            
            // 随机位置
            const left = Math.random() * 100;
            heart.style.left = `${left}%`;
            
            // 随机大小
            const size = 16 + Math.random() * 24; // 16px 到 40px
            heart.style.fontSize = `${size}px`;
            
            // 随机动画持续时间
            const duration = 2 + Math.random() * 3; // 2s 到 5s
            heart.style.animation = `floatUp ${duration}s linear forwards`;
            
            // 添加到容器
            heartsContainer.appendChild(heart);
            
            // 动画结束后移除
            setTimeout(() => {
                heart.remove();
            }, duration * 1000);
        }
        
        // 移动设备触摸支持
        let touchStartX = 0;
        let touchStartY = 0;
        let isScrolling = false;
        
        cardContainer.addEventListener('touchstart', (e) => {
            touchStartX = e.touches[0].clientX;
            touchStartY = e.touches[0].clientY;
            isScrolling = false;
        }, false);
        
        cardContainer.addEventListener('touchmove', (e) => {
            if (isScrolling) return;
            
            const touchX = e.touches[0].clientX;
            const touchY = e.touches[0].clientY;
            const diffX = Math.abs(touchX - touchStartX);
            const diffY = Math.abs(touchY - touchStartY);
            
            // 如果滑动距离超过阈值，认为是滚动操作
            if (diffX > 15 || diffY > 15) {
                isScrolling = true;
            }
        }, false);
        
        cardContainer.addEventListener('touchend', (e) => {
            if (isScrolling) return;
            
            const touchEndX = e.changedTouches[0].clientX;
            const touchEndY = e.changedTouches[0].clientY;
            
            if (Math.abs(touchEndX - touchStartX) < 15 && Math.abs(touchEndY - touchStartY) < 15) {
                cardContainer.click();
            }
        }, false);
        
        // 移动端适配：根据屏幕方向调整卡片比例
        function adjustCardForOrientation() {
            const card = document.getElementById('birthday-card');
            if (window.innerWidth < 640 && window.innerHeight < window.innerWidth) {
                // 小屏幕横向模式
                card.style.transform = 'rotate(90deg)';
                card.style.width = '90vh';
                card.style.height = '90vw';
            } else {
                // 恢复默认
                card.style.transform = '';
                card.style.width = '';
                card.style.height = '';
            }
        }
        
        // 初始化和窗口大小变化时调整
        window.addEventListener('resize', adjustCardForOrientation);
        adjustCardForOrientation();
    </script>
</body>
</html>
    